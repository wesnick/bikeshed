{% if error %}
  <div class="alert alert-danger">{{ error }}</div>
{% else %}
  <div class="card">
    <div class="card-body">
      <h3 class="card-title h5">{{ root.uri }}</h3>
      {% if root.files %}
        <div class="tree mt-4">
          {% from "file_tree.html.j2" import render_tree_node %}
          <ul class="tree">
            {{ render_tree_node(tree) }}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
