<!-- Flow Detail -->
<div class="container">
  <h1 class="title">Flow: {{ flow.name }}</h1>
  
  <div class="box">
    <div class="columns">
      <div class="column">
        <h2 class="subtitle">Details</h2>
        <table class="table">
          <tr>
            <th>ID</th>
            <td>{{ flow.id }}</td>
          </tr>
          <tr>
            <th>Name</th>
            <td>{{ flow.name }}</td>
          </tr>
          <tr>
            <th>Description</th>
            <td>{{ flow.description or "No description" }}</td>
          </tr>
          <tr>
            <th>Goal</th>
            <td>{{ flow.goal or "No goal defined" }}</td>
          </tr>
          <tr>
            <th>Current State</th>
            <td>{{ flow.current_state or "initial" }}</td>
          </tr>
          <tr>
            <th>Created</th>
            <td>{{ flow.created_at.strftime('%Y-%m-%d %H:%M:%S') }}</td>
          </tr>
          <tr>
            <th>Updated</th>
            <td>{{ flow.updated_at.strftime('%Y-%m-%d %H:%M:%S') }}</td>
          </tr>
        </table>
      </div>
      
      <div class="column">
        <h2 class="subtitle">Actions</h2>
        <div class="buttons">
          <button class="button is-primary" 
                  hx-post="/session/?flow_id={{ flow.id }}"
                  hx-target="#dashboard">
            Create New Session
          </button>
          
          <button class="button is-info"
                  hx-get="/flow/{{ flow.id }}/edit"
                  hx-target="#dashboard">
            Edit Flow
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Sessions for this flow -->
  <div class="box">
    <h2 class="subtitle">Sessions</h2>
    <div id="flow-sessions" hx-get="/session/?flow_id={{ flow.id }}" hx-trigger="load"></div>
  </div>
</div>
