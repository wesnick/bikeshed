<div>
  <svg width="400"
       height="300"
       viewBox="0 0 400 300"
       xmlns="http://www.w3.org/2000/svg">
    <title>Bicycle in front of Shed with Sun</title>
    <desc>A simple illustration of a red bicycle parked in front of a brown shed, under a blue sky with a smiling yellow sun.</desc>
    <!-- Background -->
    <rect x="0" y="0" width="400" height="200" fill="#87CEEB" /> <!-- Sky -->
    <rect x="0" y="200" width="400" height="100" fill="#90EE90" /> <!-- Ground -->
    <!-- Happy Sun -->
    <g id="sun" transform="translate(50, 50)">
    <circle cx="0" cy="0" r="30" fill="#FFD700" />
    <!-- Sun Rays -->
    <line x1="0" y1="-40" x2="0" y2="-30" stroke="#FFD700" stroke-width="3" />
    <line x1="35" y1="-15" x2="28" y2="-10" stroke="#FFD700" stroke-width="3" transform="rotate(45)" />
    <line x1="40" y1="0" x2="30" y2="0" stroke="#FFD700" stroke-width="3" />
    <line x1="35" y1="15" x2="28" y2="10" stroke="#FFD700" stroke-width="3" transform="rotate(-45)" />
    <line x1="0" y1="40" x2="0" y2="30" stroke="#FFD700" stroke-width="3" />
    <line x1="-35" y1="15" x2="-28" y2="10" stroke="#FFD700" stroke-width="3" transform="rotate(45)" />
    <line x1="-40" y1="0" x2="-30" y2="0" stroke="#FFD700" stroke-width="3" />
    <line x1="-35" y1="-15" x2="-28" y2="-10" stroke="#FFD700" stroke-width="3" transform="rotate(-45)" />
    <!-- Face -->
    <circle cx="-10" cy="-5" r="3" fill="black" />
    <circle cx="10" cy="-5" r="3" fill="black" />
    <path d="M -12 10 Q 0 20 12 10" stroke="black" stroke-width="2" fill="none" />
    <!-- Smile -->
    </g>
    <!-- Shed -->
    <g id="shed" transform="translate(150, 120)">
    <!-- Roof -->
    <polygon points="0,0 100,0 50,-40" fill="#A0522D" /> <!-- Darker Brown -->
    <!-- Body -->
    <rect x="5" y="0" width="90" height="80" fill="#D2B48C" /> <!-- Lighter Brown/Tan -->
    <!-- Door -->
    <rect x="35" y="20" width="30" height="60" fill="#A0522D" stroke="black" stroke-width="1" />
    <!-- Door Handle -->
    <circle cx="58" cy="50" r="2" fill="black" />
    </g>
    <!-- Bicycle -->
    <g id="bicycle" transform="translate(120, 210)">
    <!-- Wheels -->
    <circle cx="0" cy="25" r="25" fill="none" stroke="black" stroke-width="2" />
    <circle cx="80" cy="25" r="25" fill="none" stroke="black" stroke-width="2" />
    <!-- Spokes (simple) -->
    <line x1="0" y1="25" x2="0" y2="0" stroke="grey" stroke-width="1" />
    <line x1="0" y1="25" x2="0" y2="50" stroke="grey" stroke-width="1" />
    <line x1="0" y1="25" x2="-25" y2="25" stroke="grey" stroke-width="1" />
    <line x1="0" y1="25" x2="25" y2="25" stroke="grey" stroke-width="1" />
    <line x1="80" y1="25" x2="80" y2="0" stroke="grey" stroke-width="1" />
    <line x1="80" y1="25" x2="80" y2="50" stroke="grey" stroke-width="1" />
    <line x1="80" y1="25" x2="55" y2="25" stroke="grey" stroke-width="1" />
    <line x1="80" y1="25" x2="105" y2="25" stroke="grey" stroke-width="1" />
    <!-- Frame -->
    <path d="M 0 25 L 40 0 L 80 25 L 60 25 L 40 5 L 20 25 Z" stroke="red" stroke-width="3" fill="none" />
    <line x1="40" y1="0" x2="30" y2="-15" stroke="red" stroke-width="3" /> <!-- To handlebars -->
    <line x1="40" y1="5" x2="40" y2="25" stroke="red" stroke-width="3" /> <!-- Seat post -->
    <!-- Seat -->
    <polygon points="35,0 45,0 40,-5" fill="black" />
    <!-- Handlebars -->
    <path d="M 25 -15 H 35" stroke="black" stroke-width="2" />
    <!-- Pedals (simple) -->
    <circle cx="40" cy="25" r="3" fill="grey" />
    <line x1="40" y1="25" x2="45" y2="35" stroke="grey" stroke-width="2" />
    <rect x="43" y="35" width="4" height="2" fill="black" />
    </g>
  </svg>
</div>
