<div class="container">
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li><a hx-get="/stashes" hx-target=".dashboard" hx-push-url="true">Stashes</a></li>
      <li><a hx-get="/stashes/{{ stash.id }}" hx-target=".dashboard" hx-push-url="true">{{ stash.name }}</a></li>
      <li class="is-active"><a href="#" aria-current="page">Edit</a></li>
    </ul>
  </nav>

  <h1 class="title">Edit Stash</h1>

  <div class="box">
    <form hx-put="/api/stashes/{{ stash.id }}" 
          hx-ext="form-json" 
          hx-target=".dashboard" 
          hx-push-url="/stashes/{{ stash.id }}">
      
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input class="input" type="text" name="name" value="{{ stash.name }}" required>
        </div>
      </div>
      
      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea" name="description">{{ stash.description or '' }}</textarea>
        </div>
      </div>
      
      <div class="field">
        <label class="label">Metadata (JSON)</label>
        <div class="control">
          <textarea class="textarea" name="metadata">{{ stash.metadata | tojson }}</textarea>
        </div>
        <p class="help">Enter valid JSON</p>
      </div>
      
      <div class="field is-grouped">
        <div class="control">
          <button type="submit" class="button is-primary">Save Changes</button>
        </div>
        <div class="control">
          <button type="button" class="button" 
                  hx-get="/stashes/{{ stash.id }}" 
                  hx-target=".dashboard" 
                  hx-push-url="true">Cancel</button>
        </div>
      </div>
    </form>
  </div>
</div>
