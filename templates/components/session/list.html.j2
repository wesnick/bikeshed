<!-- Sessions List -->
<div class="container">
  <h1 class="title">Sessions</h1>

  <div class="box">
    <h2 class="subtitle">Existing Sessions</h2>
    {% if sessions %}
      <div class="table-container">
        <table class="table is-fullwidth">
          <thead>
            <tr>
              <th>Summary</th>
              <th>Goal</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for session in sessions %}
              <tr>
                <td>{{ session.summary or "Untitled Session" }}</td>
                <td>{{ session.goal or "" }}</td>
                <td>{{ session.created_at.strftime('%Y-%m-%d %H:%M') }}</td>
                <td>
                  <a class="button is-small is-info"
                     hx-get="/session/{{ session.id }}"
                     hx-target="#dashboard">View</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <p>No sessions found. Create one to get started!</p>
    {% endif %}
  </div>
</div>
