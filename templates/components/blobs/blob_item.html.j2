<div class="card mb-3" id="blob-{{ blob.id }}">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          {% if blob.content_type.startswith('image/') %}
            <img src="{{ blob.content_url }}" alt="{{ blob.name }}">
          {% else %}
            <img src="/static/file-icon.png" alt="{{ blob.name }}">
          {% endif %}
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">{{ blob.name }}</p>
        <p class="subtitle is-6">{{ blob.content_type }}</p>
      </div>
      <div class="media-right">
        <button class="button is-small is-danger"
                hx-delete="/api/blobs/{{ blob.id }}"
                hx-target="#blob-{{ blob.id }}"
                hx-swap="outerHTML">
          Delete
        </button>
      </div>
    </div>
    <div class="content">
      <p>{{ blob.description }}</p>
      <p><small>{{ blob.byte_size|format_file_size }} â€¢ {{ blob.created_at.strftime("%Y-%m-%d %H:%M") }}</small></p>
      <a href="{{ blob.content_url }}" class="button is-small is-primary" target="_blank">Download</a>
    </div>
  </div>
</div>
