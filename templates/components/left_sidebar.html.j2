    {% if tools %}
      <p class="menu-label">Tools</p>
      <ul class="menu-list">
        {% for key, item in manifest['tools'].items() %}
          <li>
            <a href="/tool/{{ key }}"
               hx-get="/tool/{{ key }}"
               hx-target="#dashboard-dock">
              {{ item.name }}
            </a>
            <span class="is-small">{{ item.description }}</span>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    {% if prompts %}
      <p class="menu-label">Prompts</p>
      <ul class="menu-list">
        {% for key, item in manifest['prompts'].items() %}
          <li>
            <a href="/prompt/{{ key }}"
               hx-get="/prompt/{{ key }}"
               hx-target="#dashboard-dock">
              {{ item.name }}
            </a>
            <span class="is-small">{{ item.description }}</span>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </aside>
</div>
