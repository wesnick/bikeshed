<!-- Left Sidebar -->

  <div>
      <aside class="menu">
        <p class="menu-label">Navigation</p>
        <ul class="menu-list">
          <li><a href="/session" hx-get="/session" hx-target="#dashboard" hx-push-url="true">Dashboard</a></li>
          <li><a href="#">Sessions</a></li>
          <li><a href="/settings" hx-get="/settings" hx-target="#dashboard" hx-push-url="true">Settings</a></li>
          <li><a href="/kitchen-sink" hx-get="/kitchen-sink" hx-target="#dashboard" hx-push-url="true">Kitchen Sink</a></li>
        </ul>
          {% for capability, items in manifest.items() if items %}
            <p class="menu-label">{{ capability }}</p>
            <ul class="menu-list">
            {% for key, item in items.items() %}
                <li>
                  <a href="/tool/{{ key }}" 
                     hx-get="/tool/{{ key }}" 
                     hx-target="#dashboard">
                    {{ item.name }}
                  </a>
                  <span class="is-small">{{ item.description }}</span>
                </li>
            {% endfor %}
            </ul>
          {%  endfor %}
      </aside>
  </div>
