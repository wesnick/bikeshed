<!-- Left Sidebar -->
<div>
  <aside class="menu">
    <h3 class="menu-label">Navigation</h3>
    {% if sessions %}
      <details>
        <summary class="is-size-5">
          Sessions
          [<a
          hx-get="/session"
          hx-target="#dashboard"
          hx-push-url="true"
        >view all</a>]
          [create]
        </summary>
        <ul class="menu-list">
          {% for session in sessions %}
            <li><a
              hx-get="/session/{{ session.id }}"
              hx-target="#dashboard"
              hx-push-url="true"
            >{{ session.summary }}</a></li>
          {% endfor %}
        </ul>
      </details>
    {% endif %}
    
    {% if session_templates %}
      <details>
        <summary class="is-size-5">
          Templates
        </summary>
        <ul class="menu-list">
          {% for template_name, template in session_templates.items() %}
            <li><a
              hx-get="/session-template/{{ template_name }}"
              hx-target="#dashboard"
              hx-push-url="true"
            >{{ template.name }}</a></li>
          {% endfor %}
        </ul>
      </details>
    {% endif %}
  </aside>
</div>
