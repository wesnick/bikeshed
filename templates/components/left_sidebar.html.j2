<!-- Left Sidebar -->
<div>
  <aside class="menu">
    <h3 class="menu-label">Navigation</h3>

    <details>
      <summary class="is-size-5">
        Flows
        [<a
        hx-get="/flow"
        hx-target="#dashboard"
        hx-push-url="true"
      >view all</a>]
        [create]
      </summary>
        <ul class="menu-list">
          {% for flow in flows %}
            <li><a
              hx-get="/flow/{{ flow.id }}"
              hx-target="#dashboard"
              hx-push-url="true"
            >{{ flow.goal }}</a></li>
          {% endfor %}
        </ul>
    </details>
    {% if sessions %}
      <details>
        <summary class="is-size-5">
          Sessions
          [<a
          hx-get="/session"
          hx-target="#dashboard"
          hx-push-url="true"
        >view all</a>]
          [create]
        </summary>
        <ul class="menu-list">
          {% for session in sessions %}
            <li><a
              hx-get="/session/{{ session.id }}"
              hx-target="#dashboard"
              hx-push-url="true"
            >{{ session.summary }}</a></li>
          {% endfor %}
        </ul>
      </details>
    {% endif %}


